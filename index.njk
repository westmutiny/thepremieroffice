<div class="feed-wrap">
  <div class="feed">
    {% for atom in collections.atoms %}
      <article class="post">
        <div class="line">{{ atom.id.region }}, {{ atom.id.country }} — {{ atom.id.report_date }}</div>
        <div class="line">Climate variability {{ atom.data.delta_variability_pct }}% vs last month</div>
        <div class="line">Primary driver: {{ atom.data.primary_driver.parameter }} ({{ atom.data.primary_driver.share_pct }}% share)</div>
        {% if atom.data.note %}<div class="line">Note: {{ atom.data.note }}</div>{% endif %}
      </article>
    {% endfor %}
  </div>
</div>
